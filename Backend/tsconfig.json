{
  "compilerOptions": {
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "baseUrl": "./",
     "paths": {
       "@/*": ["src/*"]
     },
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "outDir": "./dist",
     "module": "ESNext",
     "allowImportingTsExtensions": true,
     "noEmit": true
  }
 }